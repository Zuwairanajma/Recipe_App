<div class="container mt-5">
  <h1 class="text-center mb-4">Add your new food here</h1>

  <% if @food.errors.any? %>
    <div class="alert alert-danger">
      <p>
        <%= pluralize(@food.errors.count, "error") %> Found:
      </p>
      <ul>
        <% @food.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-container">
    <%= form_with model: @food, url: foods_path, method: :post, html: { class: 'form' } do |form| %>
      <div class="form-group">
        <%= form.label :name, class: 'form-label' %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :measurement_unit, class: 'form-label' %>
        <%= form.select :measurement_unit, ['kg', 'pounds', 'grams'], { prompt: 'Select a unit' }, { class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= form.label :price, class: 'form-label' %>
        <%= form.text_field :price, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :quantity, class: 'form-label' %>
        <%= form.number_field :quantity, class: 'form-control' %>
      </div>

      <div class="text-center">
        <%= form.submit "Add Food", class: 'btn btn-primary form-submit' %>
      </div>
    <% end %>
  </div>
</div>
